<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/banner_adv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startBannerAdv"
        android:text="banner adv" />

    <Button
        android:id="@+id/startup_adv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startStartUpPageAdv"
        android:text="startup adv" />


    <Button
        android:id="@+id/appinstall_adv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startAppInstallPageAdv"
        android:text="appinstall adv" />

    <Button
        android:id="@+id/checkAndUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="checkAndUpdateApk"
        android:text="app check and update" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="login"
        android:text="app check and update" />
</LinearLayout>